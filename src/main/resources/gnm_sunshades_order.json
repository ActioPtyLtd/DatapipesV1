{
  "script": {
    "schema": {},
    "tasks": {
      "read-job-api": {
        "type": "extract",
        "behavior": "",
        "dataSource": {
          "type": "rest",
          "behavior": "simple",
          "path": "-",
          "credential": {
            "user": "admin",
            "password": "password"
          },
          "query": {
            "read": "https://dev-api-gnm.actio.com.au:8443/api/job?include=address&filter[job.status]=CREATED&filter[job.supplier.id]=2"
          }
        }
      },
      "include-products": {
        "type": "include",
        "behavior": "",
        "dataSource": {
          "type": "rest",
          "behavior": "simple",
          "path": "-",
          "credential": {
            "user": "admin",
            "password": "password"
          },
          "query": {
            "read": "https://dev-api-gnm.actio.com.au:8443/api/productAlias?filter[productAlias.aliasPrefix]=SUNSHADES&filter[productAlias.product.productId]=@{g.id}&page[size]=1"
          }
        }
      },
      "update-job-api": {
        "type": "load",
        "behavior": "simple",
        "dataSource": {
          "type": "rest",
          "behavior": "simple",
          "path": "https://api.sunshad.es/v1/orders",
          "credential": {
            "user": "gm",
            "password": "83498dd4fa301a3aa2d117b13d371526"
          },
          "query": {
            "create": {
              "header": "https://api.sunshad.es/v1/orders",
              "body": "{ \"batches\": [{ \"batch\": \"@{d.id}\", \"jobs\": [{ \"account\": \"GANDM1\", \"address1\": \"@{(firstValue,(filterValue,g.included,'type','address'),'id',d.relationships.address.data.id).attributes.street1}\", \"address2\": \"@{(firstValue,(filterValue,g.included,'type','address'),'id',d.relationships.address.data.id).attributes.street2}\", \"carrier\": \"car1\", \"jobid\": \"@{d.id}\", \"lines\": [{ \"quantity\": @{d.attributes.quantity}, \"stockid\": \"@{(firstValue,g.productalias.*.data.*,'relationships.product.data.id',d.relationships.product.data.id).attributes.aliasId}\"}], \"name\": \"Maurice\", \"postcode\": \"@{(firstValue,(filterValue,g.included,'type','address'),'id',d.relationships.address.data.id).attributes.postcode}\", \"state\": \"@{(firstValue,(filterValue,g.included,'type','address'),'id',d.relationships.address.data.id).attributes.state}\", \"suburb\": \"@{(firstValue,(filterValue,g.included,'type','address'),'id',d.relationships.address.data.id).attributes.suburb}\"}]}]}",
              "foreach": "data.*"
            }
          }
        }
      }
    },
    "pipelines": {
      "load-job" : {
        "pipe": "read-job-api | include-products | update-job-api"
      }
    },
    "services": { },
    "startup": {
      "exec": "load-job"
    }
  }
}
